<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorMain</item>
    </style>

    <style name="NoStatusBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorMain</item>
        <!--Theme 의 StatusBar 투명하게 처리하기 위한 방법-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="NoStatusBarThemeForGallery" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorMain</item>
        <!--Theme 의 StatusBar 투명하게 처리하기 위한 방법-->
    </style>

    <style name="SplashTheme" parent="NoStatusBarTheme">
        <!--StatusBar icon 검정색 처리-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- EditText 스타일 지정-->
    <style name="SignEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorMain</item> <!--포커스 되어있지 않은 경우의 밑줄 부분-->
        <item name="colorControlActivated">@color/colorMain</item> <!--손끝으로 터치되어 있는 부분. text selection handle라고 부른다고 한다-->
        <item name="android:textCursorDrawable">@color/colorMain</item> <!--커서 색. drawable 지정되지만, 색을 설정하는것도 된다-->
        <item name="android:textColor">@color/colorWhite</item> <!--텍스트 색-->
        <item name="android:textColorHint">@color/colorMain</item> <!--입력전의 Hint (포커스 Holder)-->
        <item name="android:textColorHighlight">@color/colorMain</item> <!--텍스트 선택색-->
    </style>

    <style name="SignUpEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorMain</item> <!--포커스 되어있지 않은 경우의 밑줄 부분-->
        <item name="colorControlActivated">@color/colorMain</item> <!--손끝으로 터치되어 있는 부분. text selection handle라고 부른다고 한다-->
        <item name="android:textCursorDrawable">@color/colorMain</item> <!--커서 색. drawable 지정되지만, 색을 설정하는것도 된다-->
        <item name="android:textColor">@color/colorWhite</item> <!--텍스트 색-->
        <item name="android:textColorHint">@color/colorAlter</item> <!--입력전의 Hint (포커스 Holder)-->
        <item name="android:textColorHighlight">@color/colorMain</item> <!--텍스트 선택색-->
    </style>

</resources>
