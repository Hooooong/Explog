<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsPeedTopLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/view_newspeed_top_layout_margin"
    android:background="@android:color/transparent">

    <com.hongsup.explog.view.custom.CustomTabLayout
        android:id="@+id/topTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_newspeed_top_tab_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:tabGravity="center"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabMinWidth="@dimen/view_newspeed_top_tab_width"
        app:tabMode="scrollable" />

    <ImageView
        android:id="@+id/imgPlaceHolder"
        android:layout_width="@dimen/view_newspeed_top_image_size"
        android:layout_height="@dimen/view_newspeed_top_image_size"
        android:background="@drawable/ic_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/textTopTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_newspped_top_basic_margin"
        android:layout_marginTop="@dimen/view_newspped_top_basic_margin"
        android:gravity="center"
        android:textSize="@dimen/view_newspeed_top_title"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPlaceHolder" />
</android.support.constraint.ConstraintLayout>